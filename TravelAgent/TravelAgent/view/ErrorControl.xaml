<UserControl x:Class="TravelAgent.view.ErrorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TravelAgent.view"
             mc:Ignorable="d" 
            >
    <Grid>
        <TextBlock Name="ErrorHandler" TextWrapping="Wrap" FontSize="14px" Padding="10 10 30 10" Foreground="#FF105A87" Background="#FECFC5" Text="{Binding ErrorText}"></TextBlock>
    </Grid>
</UserControl>
