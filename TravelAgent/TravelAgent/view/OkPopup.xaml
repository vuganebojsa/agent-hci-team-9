<UserControl x:Class="TravelAgent.view.OkPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TravelAgent.view"
             xmlns:travel="clr-namespace:TravelAgent"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid Background="#4889B1">
        <StackPanel>
            <TextBlock Foreground="White" Text="Uspesno ste se registrovali." VerticalAlignment="Center" HorizontalAlignment="Center"
                       Margin="10 90 10 60" FontSize="32" TextWrapping="Wrap"/>
            <travel:BivujaButton ButtonContent="Ok" Width="150" Height="50" MouseLeftButtonDown="BivujaButton_MouseLeftButtonDown"/>

        </StackPanel>
    </Grid>
</UserControl>
