<UserControl x:Class="TravelAgent.view.NavigationButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TravelAgent.view"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="250">
    <Grid>
        <Button x:Name="btnSideNav" Click="btnSideNav_Click" Background="Transparent"  BorderBrush="White" BorderThickness="2" Padding="10 10 10 10" HorizontalContentAlignment="Left">
            <TextBlock x:Name="tbBtnNav" Text="{Binding ButtonContent}" TextWrapping="Wrap" FontSize="16" Foreground="White" FontWeight="Medium"/>
        </Button>
        

    </Grid>
</UserControl>
